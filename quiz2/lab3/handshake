#include "kernel/types.h"
#include "kernel/stat.h"
#include "user/user.h"

int
main(int argc, char *argv[])
{
  if (argc != 2) {
    fprintf(2, "usage: handshake <byte>\n");
    exit(1);
  }

  int p2c[2]; // parent -> child pipe
  int c2p[2]; // child -> parent pipe

  if (pipe(p2c) < 0 || pipe(c2p) < 0) {
    fprintf(2, "pipe failed\n");
    exit(1);
  }

  int pid = fork();
  if (pid < 0) {
    fprintf(2, "fork failed\n");
    exit(1);
  }

  // Convert argv[1] to a single byte as char is 1 byte in C

  char x = (char)atoi(argv[1]);

  if (pid == 0) {
    // ===== CHILD =====

    
    close(p2c[1]); // close unused write end
    close(c2p[0]); // close unused read end

    char buf;
    if (read(p2c[0], &buf, 1) != 1) {
      fprintf(2, "child read failed\n");
      exit(1);
    }

    printf("%d: received %d from parent\n", getpid(), (int)buf);

    if (write(c2p[1], &buf, 1) != 1) {
      fprintf(2, "child write failed\n");
      exit(1);
    }

    close(p2c[0]);
    close(c2p[1]);
    exit(0);

  } else {
    // ===== PARENT =====

    close(p2c[0]); // close unused read end
    close(c2p[1]); // close unused write end

    if (write(p2c[1], &x, 1) != 1) {
      fprintf(2, "parent write failed\n");
      exit(1);
    }

    char buf;
    if (read(c2p[0], &buf, 1) != 1) {
      fprintf(2, "parent read failed\n");
      exit(1);
    }

    printf("%d: received %d from child\n", getpid(), (int)buf);

    close(p2c[1]);
    close(c2p[0]);
    wait(0);
    exit(0);
  }
}
